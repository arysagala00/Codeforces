#include<bits/stdc++.h>

using namespace std;

int main(){
	int n,count;
	string s;

	cin>>n;
	cin>>s;

	count=0;
	for(int i=0;i<n;i++)
    {
        if(i+2<=n-1)
        {
            if(s[i]=='x' && s[i+1]=='x' && s[i+2]=='x')
            {
                count++;
            }
        }
    }

    cout<<count;

	return 0;
}
